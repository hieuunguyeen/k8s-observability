{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
}
